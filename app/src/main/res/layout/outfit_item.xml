<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="250dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- First ImageView in the first row -->
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    />
                <!-- Second ImageView in the first row -->
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                   />
            </LinearLayout>
            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Third ImageView in the second row -->
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    />
                <!-- Fourth ImageView in the second row -->
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/deleteImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_circle_btn"
            app:srcCompat="@drawable/ic_trash_can"
            android:layout_alignTop="@id/itemCategoryImage"
            android:layout_alignBottom="@id/itemCategoryImage"
            android:layout_alignLeft="@id/itemCategoryImage"
            android:layout_alignRight="@id/itemCategoryImage"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

</LinearLayout>