<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/classicOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/naturalOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Natural option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/classicOption"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/sexyOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexy option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/naturalOption"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/dramaticOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dramatic option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sexyOption"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/feminineOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feminine option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dramaticOption"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/elegantOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegant option"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/feminineOption"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>